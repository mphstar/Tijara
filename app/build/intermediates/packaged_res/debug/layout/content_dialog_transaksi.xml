<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.flexbox.FlexboxLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="20dp"
        app:justifyContent="space_between">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pilih Metode"
            android:textColor="@color/black"
            android:textStyle="bold"/>
        <ImageView
            android:id="@+id/button_close"
            app:layout_alignSelf="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/close"/>

    </com.google.android.flexbox.FlexboxLayout>
    <TextView
        android:layout_marginStart="30dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Pilih salah satu metode untuk menginputkan barang"/>
    <com.google.android.flexbox.FlexboxLayout
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:layout_marginHorizontal="30dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <LinearLayout
            android:id="@+id/button_metode_keyboard"
            android:layout_marginEnd="10dp"
            app:layout_flexBasisPercent="50%"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape2"
            tools:ignore="MissingConstraints">

            <com.google.android.flexbox.FlexboxLayout
                app:justifyContent="space_between"
                app:alignItems="center"
                android:layout_marginHorizontal="30dp"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_marginEnd="10dp"
                    android:layout_gravity="center|start"
                    android:background="@drawable/icon_keyboard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Keyboard"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>
            </com.google.android.flexbox.FlexboxLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/button_metode_barcode"
            android:backgroundTint="@color/black"
            android:background="@drawable/shape2"
            app:layout_flexBasisPercent="50%"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="MissingConstraints"
            android:orientation="horizontal">

            <com.google.android.flexbox.FlexboxLayout
                app:justifyContent="space_between"
                app:alignItems="center"
                android:layout_marginHorizontal="30dp"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:background="@drawable/icon_barcode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Barcode"
                    android:textColor="@color/white"
                    android:textStyle="bold"/>
            </com.google.android.flexbox.FlexboxLayout>
        </LinearLayout>

    </com.google.android.flexbox.FlexboxLayout>
    <LinearLayout
        android:id="@+id/detail_dialog"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.flexbox.FlexboxLayout
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:layout_marginHorizontal="30dp"
            app:justifyContent="space_between"
            android:layout_width="match_parent"
            app:flexDirection="row"
            android:layout_height="50dp">

            <EditText
                android:id="@+id/field_kode_product"
                app:layout_flexBasisPercent="80%"
                android:paddingStart="10dp"
                android:background="@drawable/shape3"
                android:hint="Kode Barang"
                android:textSize="15dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </EditText>
            <View
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_flexBasisPercent="5%"/>
            <ImageView
                app:layout_flexBasisPercent="15%"
                android:id="@+id/scan_produk"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:paddingVertical="15dp"
                android:backgroundTint="#535353"
                android:background="@drawable/shape"
                android:src="@drawable/search_2"/>

        </com.google.android.flexbox.FlexboxLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/list_produk_gratis"
                android:layout_marginHorizontal="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <LinearLayout
            android:id="@+id/button_lanjut_transaksi"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:orientation="horizontal"
            app:layout_alignSelf="center"
            android:layout_marginBottom="30dp"
            android:background="@drawable/shape2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:elevation="2dp"
            android:paddingVertical="13dp">
            <ImageView
                android:layout_marginHorizontal="20dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/keranjang"/>
            <TextView
                android:layout_marginEnd="20dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:text="Lanjutkan"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>