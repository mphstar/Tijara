<?xml version="1.0" encoding="utf-8"?>
<com.google.android.flexbox.FlexboxLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:flexDirection="column"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        app:layout_flexBasisPercent="11%"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:flexDirection="row"
            app:justifyContent="space_between"
            android:paddingHorizontal="30dp">
            <ImageView
                android:id="@+id/back_to_main_transaksi"
                app:layout_alignSelf="center"
                android:src="@drawable/kembali"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                app:layout_alignSelf="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="Rincian Barang"
                android:textSize="20dp"/>
            <ImageView
                app:layout_alignSelf="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </ImageView>
        </com.google.android.flexbox.FlexboxLayout>

    </LinearLayout>
    <ScrollView
        app:layout_flexBasisPercent="77%"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <com.google.android.flexbox.FlexboxLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_marginVertical="5dp"
                    android:layout_marginStart="30dp"
                    android:orientation="horizontal"
                    android:background="@drawable/shape"
                    android:backgroundTint="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="4dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginVertical="15dp"
                        android:background="@drawable/detail_barang" />
                    <TextView
                        android:layout_marginEnd="20dp"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="15dp"
                        android:text="Detail Barang Return"/>
                </LinearLayout>
            </com.google.android.flexbox.FlexboxLayout>
            <com.google.android.flexbox.FlexboxLayout
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="30dp"
                app:flexDirection="column"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginBottom="7dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jumlah Barang Return"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>

                <EditText
                    android:layout_gravity="center_vertical"
                    android:id="@+id/field_kode_product"
                    android:paddingVertical="15dp"
                    android:paddingStart="10dp"
                    android:background="@drawable/shape3"
                    android:textSize="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </EditText>
            </com.google.android.flexbox.FlexboxLayout>
            <com.google.android.flexbox.FlexboxLayout
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="30dp"
                app:flexDirection="column"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginBottom="7dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jenis Pengembalian"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>

                <EditText
                    android:layout_gravity="center_vertical"
                    android:paddingVertical="15dp"
                    android:paddingStart="10dp"
                    android:background="@drawable/shape3"
                    android:textSize="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </EditText>
            </com.google.android.flexbox.FlexboxLayout>
            <TextView
                android:layout_marginVertical="10dp"
                android:gravity="center"
                android:paddingVertical="10dp"
                android:paddingHorizontal="15dp"
                android:layout_marginStart="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:text="Pilih Produk"/>
            <com.google.android.flexbox.FlexboxLayout
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="30dp"
                app:flexDirection="column"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginBottom="7dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kembalian Tunai"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>

                <EditText
                    android:layout_gravity="center_vertical"
                    android:id="@+id/jumlah_kembalian_tunai"
                    android:paddingVertical="15dp"
                    android:paddingStart="10dp"
                    android:background="@drawable/shape3"
                    android:textSize="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </EditText>
            </com.google.android.flexbox.FlexboxLayout>

        </LinearLayout>
    </ScrollView>
    <LinearLayout
        app:layout_flexBasisPercent="12%"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_gravity="center_vertical"
            android:layout_marginStart="30dp"
            android:orientation="horizontal"
            android:background="@drawable/shape"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="2dp">
            <ImageView
                android:layout_marginVertical="15dp"
                android:layout_marginHorizontal="20dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/keranjang"/>
            <TextView
                android:layout_marginEnd="20dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:text="Lanjutkan"/>
        </LinearLayout>
    </LinearLayout>

</com.google.android.flexbox.FlexboxLayout>